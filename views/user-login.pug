extends layout.pug

include utils.pug

block content
  div.login_container
    h2.login_title Login
    div.errors_container
    form.login_form
      input(type='hidden' name='_csrf' value=csrfToken)
      +field('Email Address', 'email', email )
      +field('Password', 'password', null, 'password' )
      button.loginBtn Login
      a.cancelBtn(href='/') Cancel
      a.noAccBtn(href='/users/register') Don't have an account?
    script(src="/javascripts/login.js")
    link(rel='stylesheet' href='/stylesheets/login.css')
