extends layout.pug

block content
    div
        h2 #{question.title}
        p #{question.body}
        p #{questionVoteCount}
            div.question_options
                a(class='btn btn-danger'  href=`/questions/${question.id}/edit`) Edit Question
                a(class='btn btn-danger'  href=`/questions/${question.id}/delete`) Delete Question
    each answer in answerVoteCount
        div
            p #{answer[0].body}  #{answer[1]}
