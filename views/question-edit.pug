include layout.pug

include utils.pug

block content
  +validationErrorSummary(errors)
  form(action=`/questions/edit/${question.id}` method='post')
    input(type='hidden' name='_csrf' value=csrfToken)
    +field('Title', 'title', question.title)
    +field('Body', 'body', question.body)
    div(class='py-4')
      button(type='submit' class='btn btn-primary') Edit Question
      a(href=`/questions/${question.id}` class='btn btn-warning ml-2') Cancel